   @RenderBody()


    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="~/js/slick.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    <script type="text/javascript" src="~/js/city.js"></script>
    <script src="/Chat/ChatScript.js"></script>
    <script type="text/javascript">

        $(document).on('ready', function () {

            $('.slide-half-prev').click(function (e) {
                e.preventDefault();
                $('.half-screen').slick('slickPrev');
            });

            $('.slide-half-next').click(function (e) {
                e.preventDefault();
                $('.half-screen').slick('slickNext');
            });



            $('.slide-full-prev').click(function (e) {
                e.preventDefault();
                $('.full-screen').slick('slickPrev');
            });

            $('.slide-full-next').click(function (e) {
                e.preventDefault();
                $('.full-screen').slick('slickNext');
            });

            //Custom
            $('.slide-full-prev').click(function (e) {
                e.preventDefault();
                $('.full-small').slick('slickPrev');
            });

            $('.slide-full-next').click(function (e) {
                e.preventDefault();
                $('.full-small').slick('slickNext');
            });

            $(".half-screen").slick({
                infinite: true,
                variableWidth: true,
                prevArrow: false,
                nextArrow: false,
                slidesToShow: 3,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 3000,
                touchMove: true,
            });

            $(".full-screen").slick({
                infinite: true,
                variableWidth: true,
                prevArrow: false,
                nextArrow: false,
                slidesToShow: 3,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 3000,
                centerMode: true,
                touchMove: true,
            });
            //Custom
            $(".full-small").slick({
                infinite: true,
                dots: true,
                variableWidth: false,
                prevArrow: false,
                nextArrow: false,
                slidesToShow: 1,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 3000,
                centerMode: false,
                touchMove: true,
                infinite: true,
                //adaptiveHeight: true
            });


        });

    </script>

    @*@RenderSection("Scripts", false)*@

</html>
