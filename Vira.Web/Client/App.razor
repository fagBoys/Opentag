<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h3>برای دیدن این قیمت باید به سایت ورود کنید.</h3>
                    <h5>Please <a href="login">login</a> or <a href="register">register</a> for a new account.</h5>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle> صفحه مورد نظر پیدا نشد!</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">متأسفم, صفحه مورد نظر شما پیدا نشد!</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
