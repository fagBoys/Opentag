@layout TelerikLayout

@inherits LayoutComponentBase

<div class="container-fluid">
    
    @{ var bAdmin = false;}
    @if (!bAdmin)
    {
        <NewNavMenu Header="Vira"/>
        @Body

    }
    else
    {
       
        <div class="row col-12">
            <div class="col-2 border">
                <AdminMenu />
            </div>
            <div class="col-10">
                @Body
            </div>
        </div>


    }


</div>

<div class="bg-danger p-0 m-0">
    Footer
</div>
