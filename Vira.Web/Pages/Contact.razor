    <EditForm Model="@contact" OnValidSubmit="SubmitContact">
        <div class="row">
            <div class="col-12 col-md-6">
                <InputText class="form-control" required placeholder="Full name" bind-value="@Fullname"></InputText>
            </div>
            <div class="col-12 col-md-6">
                <InputText class="form-control" required placeholder="Email address" bind-value="@Email"></InputText>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <InputText class="form-control" required placeholder="Phone number" bind-value="@Phone"></InputText>
            </div>
            <div class="col-12 col-md-6">
                <InputText class="form-control" required placeholder="Subject" bind-value="@Subject"></InputText>
            </div>
        </div>
@*        <div class="row">
            <div class="col-12">
                <InputTextArea class="form-control" required placeholder="text" bind-value="@Text"></InputTextArea>
            </div>
        </div>*@
        <div class="row">
            <div class="col">
                <button class="btn btn-primary" type="submit">
                    Submit
                </button>
            </div>
        </div>
    </EditForm>
</div>

