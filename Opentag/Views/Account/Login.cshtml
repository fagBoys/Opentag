@model Opentag.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "";
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin</title>

    <link rel="stylesheet" href="~/style.css">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container vh-100">
        <div class="row align-items-center h-100">
            <div class="col-md-4 offset-md-4 col-12 align-middle justify-content-center mx-auto">
                <div class="card shadow justify-content-center mx-auto">
                    <div class="card-body justify-content-center mx-auto">
                        <img class="w-75 h-75  mx-auto d-block" src="~/images/viralogo.png" />
                        <form class="form-group" asp-controller="Account" asp-action="Login" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" required placeholder="Username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-5">
                                <input type="password" class="form-control" required placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-check text-center pt-5 align-content-center">
                                <input class="form-check-input align-items-center" type="checkbox" value="" id="flexCheckChecked" />
                                <label class="form-check-label" for="flexCheckChecked">Remember me</label>
                            </div>
                            <div class="form-group text-center">
                                <p class="small">Don't remember your password?<a href="#"> Resset password</a></p>
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>