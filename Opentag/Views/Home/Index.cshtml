                        <form asp-action="Index" asp-controller="Home" class="contact-form-style" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">

                                <div class="col-lg-6">
                                    <input asp-for="FullName" placeholder="Full name" class="contact-input-style" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6">
                                    <input asp-for="EmailAddress" placeholder="Email address" class="contact-input-style" />
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="row">

                                <div class="col-lg-6 mt-4">
                                    <input asp-for="PhoneNumber" placeholder="Phone number" class="contact-input-style" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 mt-4">
                                    <input asp-for="Subject" placeholder="Subject" class="contact-input-style" />
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="row">

                                <div class="col-lg-12">
                                    <textarea asp-for="Message" type="text" placeholder="Message" class="contact-textarea-style mt-4"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-12" style="text-align: center;">
                                    <button type="submit" class="btn btn-dark contact-button-style">Send</button>
                                </div>
                            </div>
                        </form>
